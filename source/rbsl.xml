<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>RBSL Framework!</name>
    <version>@build.version@</version>
	<creationDate>July 2012</creationDate>
	<copyright>Copyright (C) 2009 - 2012 Ready Bytes Softwrae Labs. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<author>Ready Bytes Software Labs Pvt. Ltd.</author>
	<authorEmail>team@readybytes.in</authorEmail>
	<authorUrl>www.readybytes.in</authorUrl>
    <description>RBSL Framework: Should be Enabled for JoomlaXi extensions</description>

	<scriptfile>script.php</scriptfile>

	<files>
		<filename plugin="rbsl">rbsl.php</filename>
		<filename>index.html</filename>
		<folder>rb</folder>
	</files>

	<!-- RB Framework Langauge -->
	<languages>
		<language tag="en-GB">languages/en-GB.plg_system_rbsl.ini</language>
		<language tag="en-GB">languages/en-GB.plg_system_rbsl.sys.ini</language>
	</languages>

	<!-- Media files -->
	<media destination="rb" folder="media">
		<folder>jui</folder>
		<folder>nvd3</folder>
		<folder>rb</folder>
	</media>

	<config>
	</config>
</extension>
